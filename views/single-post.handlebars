<div class="container my-4">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title text-center">{{post.title}}</h3>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer">
      <p><strong>Created by: </strong>{{post.user.username}}
        <strong>Created on: </strong>{{format_date post.createdAt}}</p>
    </div>
  </div>
</div>

<div class="container my-4 d-flex">

  {{log "Comments:" post}}
  <div class="comments">
  {{#each post.comments}}
    <h3 class="text-center">{{post.comments.length}}Comments</h3>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">{{this.user.username}}</h3>
      </div>
      <div class="card-body">
        <p class="card-text">{{this.comment}}</p>
      </div>
      <div class="card-footer">
        <p>
          <strong>Created on: </strong>{{format_date createdAt}}</p>
      </div>
    </div>
    </div>
  {{/each}}

  <div class="card">
    <div class="card-header">
    <h3>Leave your comment here</h3>
    </div>
    <div class="card-body">
     <textarea id="edit-content"class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
     <button class="btn mt-4">Submit</button>
     </div>
  </div>
</div>