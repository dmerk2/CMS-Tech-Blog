<div class="container my-4">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">{{post.title}}</h3>
    </div>
    <div class="card-body">
      <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer">
      <p><strong>Created By: </strong>{{post.user.username}}
        <strong>Created At: </strong>{{format_date post.createdAt}}</p>
    </div>
  </div>
</div>